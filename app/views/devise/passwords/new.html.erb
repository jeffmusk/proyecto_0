<div class="row">
	<div class="col-sm-4">
		
	</div>
	<div class="col-sm-4">
	
		<div class="container">
			  <div class="row">
			    <div class="col-12 ">
						<h2>¿Olvidaste tu contraseña?</h2>	    
			    </div>
			  </div>
			</div>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name , class:"form-group"), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>

		  <div class="container">
			  <div class="row">
			    <div class="col align-self-start">
			    
			    </div>
			    <div class="col align-self-center">

		  <div class="actions mt-4 ">
		    <%= f.submit "Enviarme instrucciones " ,class:"btn btn-info" %>
		  </div>
			    </div>
			    <div class="col align-self-end">

			    </div>
			  </div>
			</div>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>


</div>
